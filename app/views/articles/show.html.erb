<div class="container mt-5 mb-5">
  <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
    <h1><%= @article.title %></h1>
    <%= link_to "Back to all articles", articles_path, :class=>"btn btn-primary btn-sm" %>
    <%= link_to "Edit this article", edit_article_path(@article), :class=>"mx-2 btn btn-warning btn-sm" %>
    <%= link_to "Delet this article", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, :class=>"btn btn-danger btn-sm" %>
  </div>

  <div>
    <p><%= @article.content %></p>
  </div>

</div>
